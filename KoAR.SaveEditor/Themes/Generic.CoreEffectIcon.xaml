<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:KoAR.SaveEditor.Views">
    <Style TargetType="{x:Type views:CoreEffectIcon}">
        <Style.Triggers>
            <Trigger Property="CoreEffect" Value="{x:Null}">
                <Setter Property="Visibility" Value="Collapsed" />
            </Trigger>
        </Style.Triggers>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:CoreEffectIcon}">
                    <ControlTemplate.Resources>
                        <views:BitmapConverter x:Key="BitmapConverter" />
                    </ControlTemplate.Resources>
                    <Image Margin="1,0" x:Name="PART_Image" Width="20"
                        Source="{Binding CoreEffect.DamageType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BitmapConverter}}"
                        ToolTip="{Binding CoreEffect.DisplayText, RelativeSource={RelativeSource TemplatedParent}}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>